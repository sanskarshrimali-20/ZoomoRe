<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tw__solid_white"
    tools:context=".presentation.ui.auth.phone_auth.enter_code.EnterCodeFragment">


    <TextView
        android:id="@+id/sign_up_plain_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/sign_up"
        android:textColor="@color/dark_black"
        android:textSize="@dimen/_16ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/create_username_plain_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:fontFamily="@font/cabin_medium"
        android:text="@string/enter_code"
        android:textColor="@color/dark_black"
        android:textSize="@dimen/_16ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_plain_text" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/sign_up_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        app:backgroundTint="@color/pinkBtnBackground"
        android:fontFamily="sans-serif-medium"
        android:text="@string/sign_up"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/create_username_plain_text"
        app:layout_constraintTop_toBottomOf="@+id/input_code" />

    <com.bigbangbutton.editcodeview.EditCodeView
        android:id="@+id/input_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:fontFamily="@font/cabin_medium"
        android:textColor="@color/dark_black"
        android:textSize="@dimen/_14ssp"
        app:codeLength="6"
        app:layout_constraintEnd_toEndOf="@+id/sign_up_btn"
        app:layout_constraintStart_toStartOf="@+id/create_username_plain_text"
        app:layout_constraintTop_toBottomOf="@+id/create_username_plain_text"
        app:textSize="@dimen/_14ssp"
        app:underlineBaseColor="@color/light_black"
        app:underlineFilledColor="@color/dark_black"
        app:underlineSelectedColor="@color/pinkBtnBackground"
        app:underlineStroke="@dimen/_1sdp" />

</androidx.constraintlayout.widget.ConstraintLayout>
